{% extends '@DLBackoffice/BackLayout/Layout.html.twig' %}

{% block content %}
    <div class="women_main">

        <div class="w_content">
            <div class="women">
                <a href="#"><h4>Produits DreamLife  <span></span></h4></a>
                {#<ul class="w_nav">
                    <li>Sort :</li>
                    <li><a class="active" href="#">popular</a></li>
                    |
                    <li><a href="#">new </a></li>
                    |
                    <li><a href="#">discount</a></li>
                    |
                    <li><a href="#">price: Low High </a></li>
                    <div class="clear"></div>
                </ul>#}
