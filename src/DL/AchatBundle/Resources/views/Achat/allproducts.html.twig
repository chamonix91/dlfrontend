            </div>
            <!-- grids_of_4 -->
            {% set j = 4 %}
            {% for i in products %}
            {% if j == 4 %}
            <div class="grids_of_4">
                {% endif %}

                {% set j = j - 1 %}

                <div class="grid1_of_4">
                    <div class="content_box"><a href="{{ path('detailProduct', { 'id': i.id }) }}">
                            <img src="data:image/png;base64,{{ i.image1 }}" class="img-responsive" alt="">
                        </a>
                        <h4><a href="{{ path('detailProduct', { 'id': i.id }) }}">{{ i.libelle }}</a></h4>
                        <p>{{ i.shortdescription }}</p>
                        <div class="grid_1 simpleCart_shelfItem">

                            <div class="item_add"><span class="item_price"><h6>{{ i.prix }}</h6></span></div>
                            <div class="item_add"><span class="item_price"><a href="{{ path('detailProduct', {'id': i.id}) }}">Plus d'informations</a></span></div>
                        </div>
                    </div>
                </div>
                {% if j == 0 %}
                <div class="clearfix"></div>
            </div>

        {% set j = 4 %}
        {% endif %}

        {% endfor %}
            <div class="clearfix"></div>
        <!-- end grids_of_4 -->
    </div>

    </div>

{% endblock content %}